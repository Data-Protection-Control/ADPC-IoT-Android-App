<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="at.wu_ac.victor_morel.ADPC_IoT">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/coyote"
        android:label="@string/app_name"
        android:roundIcon="@drawable/coyote"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="at.wu_ac.victor_morel.ADPC_IoT.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.wu_ac.victor_morel.ADPC_IoT.AddRuleActivity"
            android:label="@string/title_activity_add_rule"
            android:parentActivityName="at.wu_ac.victor_morel.ADPC_IoT.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="at.wu_ac.victor_morel.ADPC_IoT.AddTransferRuleActivity"
            android:label="@string/title_activity_add_transfer_rule"
            android:parentActivityName="at.wu_ac.victor_morel.ADPC_IoT.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="at.wu_ac.victor_morel.ADPC_IoT.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="at.wu_ac.victor_morel.ADPC_IoT.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.wu_ac.victor_morel.ADPC_IoT.MainActivity" />
        </activity>

        <activity
            android:name="at.wu_ac.victor_morel.ADPC_IoT.ViewPolicies"
            android:label="@string/title_activity_visualize_policies"
            android:parentActivityName="at.wu_ac.victor_morel.ADPC_IoT.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.wu_ac.victor_morel.ADPC_IoT.MainActivity" />
        </activity>

        <activity
            android:name="at.wu_ac.victor_morel.ADPC_IoT.VisualizePoliciesActivity"
            android:label="@string/title_activity_visualize_policies"
            android:parentActivityName="at.wu_ac.victor_morel.ADPC_IoT.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name="at.wu_ac.victor_morel.ADPC_IoT.Tools.BluetoothLeService"
            android:enabled="true" />

    </application>

</manifest>